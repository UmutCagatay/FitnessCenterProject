@model IEnumerable<FitnessCenterProject.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-4">
    <h2>Eğitmen Listesi</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Eğitmen Ekle</a>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 150px;">Fotoğraf</th>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Verdiği Dersler</th>
                <th style="width: 250px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="/images/trainers/@item.ImageUrl" style="width: 100px; height: 100px; object-fit: cover; border-radius: 10px;" />
                        }
                        else
                        {
                            <div style="width: 100px; height: 100px; background-color: #f0f0f0; border-radius: 10px; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                <span class="text-muted small">Resim Yok</span>
                            </div>
                        }
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.Specialization</td>
                    <td>
                        @if (item.TrainerServices != null && item.TrainerServices.Any())
                        {
                            @foreach (var ts in item.TrainerServices)
                            {
                                <span class="badge bg-info text-dark me-1">@ts.Service.Name</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Availability" asp-action="Index" asp-route-trainerId="@item.Id" class="btn btn-sm btn-info text-white">Saatler</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>