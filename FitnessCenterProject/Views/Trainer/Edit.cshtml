@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">Eğitmen Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="/images/trainers/@Model.ImageUrl" class="rounded-circle img-thumbnail" width="150" />
                                <p class="text-muted small mt-1">Mevcut Fotoğraf</p>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialization" class="form-label"></label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fotoğrafı Değiştir</label>
                            <input type="file" name="file" class="form-control" accept="image/*" />
                            <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>