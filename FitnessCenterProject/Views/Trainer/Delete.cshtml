@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Sil";
}

<div class="container mt-4">
    <h3>Silmek istediğine emin misin?</h3>
    <div class="alert alert-danger">
        <strong>@Model.FullName</strong> eğitmeni silinecek.
        <br>
        <small>Sunucudaki resmi de silinmeyecek, sadece kayıt kalkacak.</small>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="/images/trainers/@Model.ImageUrl" width="100" class="mb-3 rounded" />
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </form>
</div>