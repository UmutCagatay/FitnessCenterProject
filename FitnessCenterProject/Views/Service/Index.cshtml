@model IEnumerable<FitnessCenterProject.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-5">
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmetlerimiz</h2>
        <a class="btn btn-primary" asp-controller="Service" asp-action="Create">
            + Yeni Hizmet Ekle
        </a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Resim</th>
                <th>Hizmet Adı</th>
                <th>Süre</th>
                <th>Ücret</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(service.ImageUrl))
                        {
                            <img src="@service.ImageUrl" alt="@service.Name" width="50" height="50" style="object-fit:cover; border-radius:5px;" />
                        }
                        else
                        {
                            <span class="text-muted">Resim Yok</span>
                        }
                    </td>
                    <td class="align-middle">@service.Name</td>
                    <td class="align-middle">@service.Duration dk</td>
                    <td class="align-middle">@service.Price ₺</td>
                    <td class="align-middle">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@service.Id">Düzenle</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@service.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>