@model IEnumerable<FitnessCenterProject.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <h2>Hizmet Listesi</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre (Dk)</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Duration</td>
                    <td>@item.Price ₺</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>